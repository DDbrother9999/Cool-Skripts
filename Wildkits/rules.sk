    set slot 5 of metadata tag "rulemenu" of {_p} to black stained glass pane named " "
    set slot 6 of metadata tag "rulemenu" of {_p} to black stained glass pane named " "
    set slot 7 of metadata tag "rulemenu" of {_p} to black stained glass pane named " "
    set slot 8 of metadata tag "rulemenu" of {_p} to black stained glass pane named " "
    set slot 9 of metadata tag "rulemenu" of {_p} to black stained glass pane named " "
    set slot 17 of metadata tag "rulemenu" of {_p} to black stained glass pane named " "
    set slot 18 of metadata tag "rulemenu" of {_p} to black stained glass pane named " "
    set slot 19 of metadata tag "rulemenu" of {_p} to black stained glass pane named " "
    set slot 25 of metadata tag "rulemenu" of {_p} to black stained glass pane named " "
    set slot 26 of metadata tag "rulemenu" of {_p} to black stained glass pane named " "
    
on inventory click:
    if event-inventory = (metadata tag "rulemenu" of player):
        cancel event
        
on inventory close:
    remove 1 black stained glass pane from player's inventory
    remove 1 book named "&eRules" from player's inventory