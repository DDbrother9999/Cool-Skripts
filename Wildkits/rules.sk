command /rules:
    trigger:
        rulesGui(player)

function rulesGui(p: player):
    set metadata tag "rulemenu" of {_p} to chest inventory with 3 rows named "&eRules menu"
    set slot 10 of metadata tag "rulemenu" of {_p} to book named "&eRule 1" with lore "&aNo Self Promoting"
    set slot 11 of metadata tag "rulemenu" of {_p} to book named "&eRule 2" with lore "&aBe Ethical"
    set slot 12 of metadata tag "rulemenu" of {_p} to book named "&eRule 3" with lore "&aUse Common Sense"
    set slot 13 of metadata tag "rulemenu" of {_p} to book named "&eRule 4" with lore "&aDo Not Hack Or Use Hacked Clients"
    set slot 14 of metadata tag "rulemenu" of {_p} to book named "&eRule 5" with lore "&aNo Slurs Or Offensive Swears"
    set slot 15 of metadata tag "rulemenu" of {_p} to book named "&eRule 6" with lore "&aNo Duping Or Exploiting"
    set slot 16 of metadata tag "rulemenu" of {_p} to book named "&eRule 7" with lore "&aRespect Everyone"
    set slot 20 of metadata tag "rulemenu" of {_p} to book named "&eRule 8" with lore "&aThese rules apply to everyone"
    set slot 21 of metadata tag "rulemenu" of {_p} to book named "&eRule 9" with lore "&aDo Not Spam"
    set slot 22 of metadata tag "rulemenu" of {_p} to book named "&eRule 10" with lore "&aNo NSFW Or Sexual Content"
    set slot 23 of metadata tag "rulemenu" of {_p} to book named "&eRule 11" with lore "&aNo Begging For Anything!"
    set slot 24 of metadata tag "rulemenu" of {_p} to book named "&eRule 12" with lore "&aNo Lava Casting!"
    rulesGuiSides({_p})
    open (metadata tag "rulemenu" of {_p}) to {_p}
    
